
@{
    ViewBag.Title = "Index";
    ViewBag.active = "ManageAdmins";
}
<style>
    .btn:not([class*='outline']) {
     color: black !important;
}
</style>
<section class="py-5">
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <h6 class="text-uppercase mb-0">System Users</h6>
                        </div>
                        <div class="col-sm-6">
                            <button type="button" onclick="LoadAdminForm()" title="Add New Admin" class="btn btn-outline-primary float-right">
                                <span class="fa fa-plus"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="AdmintblBody"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="_adminform"></div>
<script>
    $(document).ready(function () {
        LoadAdmins();
    })
    function LoadAdmins() {
        $.ajax({
            type: 'GET',
            url: '/Admin/GetAdmins',
            success: function (res) {
                $('#AdmintblBody').empty().html(res);
            },
            error: function () {
            }
        })
    }
     function LoadAdminForm() {
        $.ajax({
            type: 'GET',
            url: '/Admin/AddAdmin',
            success: function (res) {
                $('#_adminform').empty().html(res);
            }
        })
    }
</script>
<script>
    function EditAdmin(adminid) {
        $.ajax({
            type: 'GET',
            url: '/Admin/GetAdmin',
            data: {
                AdminID:adminid
            },
            success: function (res) {
                $('#_adminform').empty().html(res);
                $('#mdlAddAdmin').modal('show');
            },
            error: function () {
                toastr.error('Error');
            }
        })
    }
    function DeleteAdmin(ID) {
         swal({
            title: 'Are you sure ?',
            text: '',
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "btn-danger",
            confirmButtonText: 'Yes, delete it!',
            closeOnConfirm: true,
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: 'GET',
                        url: '/Admin/DeleteAdmin',
                        data: { AdminID: ID },
                        success: function (res) {
                            if (res == 1) {
                                toastr.success('Admin Deleted');
                                LoadAdmins();
                            }
                            else {
                                toastr.error('Admin Not Deleted');
                            }
                        },
                        error: function (ahx) {
                            toastr.error('Server error');
                        }
                    });
                }
            });
    }
</script>


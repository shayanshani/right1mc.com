@model List<RightOneCRM.Models.Employees>
<style>
    .btnCD {
        margin: 5px;
        padding: 5px;
    }
</style>
<section class="py-5">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var emp in Model)
                   {
                       <tr>
                           <td>@emp.EmpName</td>
                           <td>
                               <a href="@Url.Action("Index","EmployeeDocuments",new {EmpID = emp.EmpID })" class="btn btn-link" title="Show Documents">
                                   <span class="fa fa-book text-success"></span>
                               </a>
                           </td>
                       </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</section>

